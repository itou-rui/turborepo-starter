{
  "name": "turborepo-starter",
  "description": "Boilerplate for streamlined development of Turborepo applications with best practices and curated configurations.",
  "author": "itou-rui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "cz",
    "setup-google-cloud": "./scripts/setup-google-cloud.sh",
    "gcloud:role.list": "gcloud iam roles list --format=\"table(name, title, description)\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.4.0",
    "husky": "^9.1.7",
    "shadcn": "^2.8.0",
    "turbo": "2.3.3",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.17",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable",
      "cz-customizable": {
        "config": ".cz-config.js"
      }
    }
  }
}
